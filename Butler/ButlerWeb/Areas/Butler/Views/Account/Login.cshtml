@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="large-4 columns">
        <h2>Login</h2>
        @using (Html.BeginForm())
        {
            <label>Name or Email</label>
            @Html.Editor("Username");
            <label>Password</label>
            @Html.Password("Password");
            <br />
            <input class="button" type="submit" value="Login" />
        }
    </div>
</div>
